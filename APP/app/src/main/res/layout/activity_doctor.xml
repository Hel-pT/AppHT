<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorActivity"
    android:background="#B8D6EA">

    <!-- ImageView para el logo del doctor -->

    <!-- CardView para agrupar los botones de la actividad de doctor -->

    <View
        android:id="@+id/view19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#27B9CD"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_espi"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDoctorPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- LinearLayout para organizar los botones dentro del CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título del Panel de Doctor -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="480dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDoctorPanelTitle"
                        android:text="Panel de Doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#27B9CD"
                        android:textSize="34dp"
                        android:textStyle="bold|italic"/>

                    <View
                        android:id="@+id/view11"
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />

                    <Button
                        android:id="@+id/btnViewPatients"
                        android:text="Ver Pacientes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#27B9CD"
                        android:textColor="#FFFFFF"
                        android:textSize="21dp"
                        android:textStyle="bold|italic"
                        />

                    <View
                        android:id="@+id/view17"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <Button
                        android:id="@+id/btnCreatePatient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#27B9CD"
                        android:textColor="#FFFFFF"
                        android:textSize="21dp"
                        android:textStyle="bold|italic"
                        android:text="Crear Pacientes" />

                    <View
                        android:id="@+id/view18"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <Button
                        android:id="@+id/btnAbrirChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#27B9CD"
                        android:textColor="#FFFFFF"
                        android:textSize="21dp"
                        android:textStyle="bold|italic"
                        android:text="Abrir Chat" />

                    <View
                        android:id="@+id/view12"
                        android:layout_width="match_parent"
                        android:layout_height="70dp" />

                    <Button
                        android:id="@+id/btnLogoutDoctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#27B9CD"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"
                        android:textStyle="bold|italic"
                        android:text="Cerrar Sesión" />
                </LinearLayout>
            </ScrollView>

            <!-- Botón Ver Pacientes -->

            <!-- Botón Crear Pacientes -->

            <!-- Botón para abrir el chat -->

            <!-- Botón Cerrar Sesión -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
