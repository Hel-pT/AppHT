<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleRecompensaActivity">

    <!-- TextView para mostrar el nombre del reto -->
    <TextView
        android:id="@+id/tvNombreReto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la terapia"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView para mostrar la descripción del reto -->
    <TextView
        android:id="@+id/tvDescripcionTerapia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción detallada"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombreReto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

