<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResponsableActivity">

    <!-- ImageView para el logo (si es necesario) -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="216dp"
        android:layout_height="238dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/helpt" />

    <!-- CardView que contiene las opciones -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardResponsableMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Título del menú de responsable -->
            <TextView
                android:id="@+id/textViewResponsableTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panel del Responsable"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Botón para ver la información del paciente -->
            <Button
                android:id="@+id/btnVerInformacionPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Información del Paciente"
                android:layout_marginBottom="16dp" />

            <!-- Botón para ver el calendario de citas -->
            <Button
                android:id="@+id/btnCalendarioCitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Calendario de Citas"
                android:layout_marginBottom="16dp" />

            <!-- Botón para ver los resultados de las terapias/recompensas -->
            <Button
                android:id="@+id/btnVerResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Resultados de Terapias"
                android:layout_marginBottom="16dp" />

            <!-- Botón para abrir el chat con el doctor -->
            <Button
                android:id="@+id/btnChatDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chatear con el Doctor"
                android:layout_marginBottom="16dp" />

            <!-- Botón para cerrar sesión -->
            <Button
                android:id="@+id/btnLogoutResponsable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar Sesión"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
