<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResponsableActivity">

    <!-- ImageView para el logo (si es necesario) -->

    <View
        android:id="@+id/view9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#27B9CD"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <!-- CardView que contiene las opciones -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_espi"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardResponsableMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título del menú de responsable -->

            <!-- Botón para ver la información del paciente -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="480dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewResponsableTitle"
                        android:text="Panel del Responsable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#27B9CD"
                        android:textSize="34dp"
                        android:textStyle="bold|italic" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/btnVerInformacionPaciente"
                        android:text="Ver Información del Paciente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#27B9CD"
                        android:textColor="#FFFFFF"
                        android:textSize="21dp"
                        android:textStyle="bold|italic" />

                    <View
                        android:id="@+id/view14"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <Button
                        android:id="@+id/btnCalendarioCitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#27B9CD"
                        android:text="Ver Calendario de Citas"
                        android:textColor="#FFFFFF"
                        android:textSize="21dp"
                        android:textStyle="bold|italic" />

                    <View
                        android:id="@+id/view13"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <Button
                        android:id="@+id/btnVerResultados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#27B9CD"
                        android:text="Ver Resultados de Terapias"
                        android:textColor="#FFFFFF"
                        android:textSize="21dp"
                        android:textStyle="bold|italic" />

                    <View
                        android:id="@+id/view15"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <Button
                        android:id="@+id/btnChatDoctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#27B9CD"
                        android:text="Chatear con el Doctor"
                        android:textColor="#FFFFFF"
                        android:textSize="21dp"
                        android:textStyle="bold|italic" />

                    <View
                        android:id="@+id/view16"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <Button
                        android:id="@+id/btnLogoutResponsable"
                        android:text="Cerrar Sesión"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#27B9CD"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"
                        android:textStyle="bold|italic" />

                </LinearLayout>
            </ScrollView>

            <!-- Botón para ver el calendario de citas -->

            <!-- Botón para ver los resultados de las terapias/recompensas -->

            <!-- Botón para abrir el chat con el doctor -->

            <!-- Botón para cerrar sesión -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
